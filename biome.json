{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": { "noUnusedVariables": "error" },
      "style": { "noNonNullAssertion": "error", "useConst": "error" },
      "suspicious": { "noExplicitAny": "error", "noArrayIndexKey": "error" }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "files": {
    "include": [
      "packages/reach/src/**/*",
      "packages/reach/tests/**/*",
      "packages/reach/index.ts"
    ],
    "ignore": ["node_modules/**", "dist/**", "*.d.ts", "packages/website/**"]
  }
}
