{
  "name": "reach-a11y",
  "version": "1.0.0",
  "description": "Check your site for accessibility. One URL or whole siteâ€”quick checks, full reports, and history. Lightweight CLI.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "reach": "dist/index.js"
  },
  "scripts": {
    "build": "biome check src/ tests/ index.ts && tsc -p tsconfig.build.json",
    "dev": "tsx index.ts",
    "test": "vitest run",
    "test:fast": "vitest run --testNamePattern=\"(mcp|types|history|axe-coverage|reporters|with mocks|Mock Usage Examples)\"",
    "test:integration": "tsx index.ts audit https://example.com",
    "mcp": "node dist/src/mcp/index.js",
    "lint": "biome check src/ tests/ index.ts",
    "lint:fix": "biome check --write src/ tests/ index.ts",
    "format": "biome format --write src/ tests/ index.ts",
    "install-browsers": "playwright install"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "testing",
    "bun",
    "axe-core",
    "playwright",
    "mcp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/softwarebyze/accessibility-auditor.git",
    "directory": "packages/reach"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "author": "Zack Ebenfeld",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "linkedom": "^0.18.9",
    "ora": "^9.0.0",
    "playwright": "^1.56.0",
    "puppeteer-core": "^24.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^25.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
