{
  "name": "accessibility-auditor",
  "version": "1.0.0",
  "description": "A comprehensive, enterprise-grade accessibility testing tool with advanced reporting, audit history, and MCP server support",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "a11y-audit": "./dist/index.js"
  },
  "scripts": {
    "build": "bun run lint && bun build index.ts --outdir dist --target bun && bun build src/mcp/index.ts --outdir dist/mcp --target bun",
    "dev": "bun run index.ts",
    "test": "bun test",
    "test:fast": "bun test --test-name-pattern=\"(mcp|types|history|axe-coverage|reporters|with mocks|Mock Usage Examples)\"",
    "test:integration": "bun run index.ts --url https://example.com",
    "mcp": "bun run dist/mcp/index.js",
    "lint": "biome check src/ tests/",
    "lint:fix": "biome check --apply src/ tests/",
    "format": "biome format --write src/ tests/",
    "install-browsers": "bunx playwright install"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "ada",
    "testing",
    "axe-core",
    "playwright",
    "mcp",
    "model-context-protocol"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/softwarebyze/accessibility-auditor.git"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "author": "Zack Ebenfeld",
  "license": "MIT",
  "dependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "ora": "^9.0.0",
    "playwright": "^1.56.0",
    "puppeteer-core": "^24.23.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.23",
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.9.3"
  }
}
