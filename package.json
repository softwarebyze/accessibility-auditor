{
  "name": "accessibility-auditor",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo: Reach CLI (Bun) + marketing website",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --cwd packages/reach build",
    "build:site": "bun run --cwd packages/website build",
    "dev": "bun run --cwd packages/reach dev",
    "test": "bun run --cwd packages/reach test",
    "test:fast": "bun run --cwd packages/reach test:fast",
    "test:integration": "bun run --cwd packages/reach test:integration",
    "lint": "biome check packages/reach/src packages/reach/tests packages/reach/index.ts",
    "lint:fix": "biome check --write packages/reach/src packages/reach/tests packages/reach/index.ts",
    "format": "biome format --write packages/reach/src packages/reach/tests packages/reach/index.ts",
    "site": "bun run --cwd packages/website dev",
    "site:build": "bun run --cwd packages/website build",
    "site:preview": "bun run --cwd packages/website preview",
    "install-browsers": "bun run --cwd packages/reach install-browsers",
    "check": "bun run lint && bun run test && bun run build",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/softwarebyze/accessibility-auditor.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3"
  },
  "lint-staged": {
    "packages/reach/**/*.{ts,tsx,js}": "biome check --write"
  }
}
